<!DOCTYPE html>
<html>
  <head>
    <title>Hajj</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript" src="https://maps.google.com/maps/api/js?sensor=true"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

    <nav class="navbar navbar-inverse  ">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <%= link_to 'الحج', root_path, class: 'navbar-brand' %>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
              <ul class="nav navbar-nav">
                <% if current_user %>
                  <li><%= link_to 'تسجيل خروج', destroy_user_session_path,  method: :delete %>  </li>

                       <% else %>

                <li><%= link_to "تسجيل", new_user_registration_path %></li>
                <li><%= link_to "دخول", new_user_session_path %></li>
                    <li><%= link_to "عبادات", worships_path %></li>

                <% end %>
              </ul>
            </div><!--/.nav-collapse -->
          </div>
        </nav>

        <div class="container">
            <div class="alert">
          <%= yield %>
            </div>
        </div>



      <%= javascript_include_tag 'https://maps.googleapis.com/maps/api/js?key=AIzaSyAWtGaJfW-bgrchs_fKuS-bx_9tAtTnGJc&sensor=true' %>
  </body>
</html>
